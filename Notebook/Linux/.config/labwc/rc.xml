<?xml version="1.0"?>
<labwc_config>

  <core>
    <gap>10</gap>
  </core>

  <theme>
    <name>GTK</name>
    <cornerRadius>0</cornerRadius>
    <font name="sans" size="10"/>
  </theme>
  <regions>
      <region name="top-left"     x="0%"  y="0%"  height="50%"  width="50%"  />
      <region name="top"          x="0%"  y="0%"  height="50%"  width="100%" />
      <region name="top-right"    x="50%" y="0%"  height="50%"  width="50%"  />
      <region name="left"         x="0%"  y="0%"  height="100%" width="50%"  />
      <region name="center"       x="10%" y="10%" height="80%"  width="80%"  />
      <region name="right"        x="50%" y="0%"  height="100%" width="50%"  />
      <region name="bottom-left"  x="0%"  y="50%" height="50%"  width="50%"  />
      <region name="bottom"       x="0%"  y="50%" height="50%"  width="100%" />
      <region name="bottom-right" x="50%" y="50%" height="50%"  width="50%"  />
  </regions>
  <keyboard>
    <default/>
    <keybind key="C-A-t">
      <action name="Execute" command="com.raggesilver.BlackBox"/>
    </keybind>
    <keybind key="C-A-f">
      <action name="Execute" command="org.kde.dolphin"/>
    </keybind>
    <keybind key="C-A-a">
      <action name="Execute" command="pamac-manager"/>
    </keybind>
    <keybind key="C-A-s">
      <action name="Execute" command="com.valvesoftware.Steam"/>
    </keybind>
    <keybind key="C-A-Delete">
      <action name="Execute" command="io.missioncenter.MissionCenter"/>
    </keybind>
    <keybind key="C-A-d">
      <action name="Execute" command="com.discordapp.Discord"/>
    </keybind>
    <keybind key="C-A-h">
      <action name="Execute" command="com.heroicgameslauncher.hgl"/>
    </keybind>
    <keybind key="C-A-b">
      <action name="Execute" command="com.usebottles.bottles"/>
    </keybind>
    <keybind key="C-A-e">
      <action name="Execute" command="eu.betterbird.Betterbird"/>
    </keybind>
    <keybind key="C-A-o">
      <action name="Execute" command="md.obsidian.Obsidian"/>
    </keybind>
    <keybind key="C-A-c">
      <action name="Execute" command="org.gnome.Calculator"/>
    </keybind>
    <keybind key="C-A-v">
      <action name="Execute" command="com.vscodium.codium"/>
    </keybind>
    <keybind key="C-A-w">
      <action name="Execute" command="org.mozilla.firefox"/>
    </keybind>
    <keybind key="Super_L">
      <action name="Execute" command="rofi -show drun"/>
    </keybind>
    <keybind key="C-A-1">
      <action name="Execute" command="org.libretro.RetroArch"/>
    </keybind>
    <keybind key="C-A-g">
      <action name="Execute" command="godot-mono"/>
    </keybind>
    <keybind key="C-A-m">
      <action name="Execute" command="harmonoid"/>
    </keybind>
    <keybind key="C-A-p">
      <action name="Execute" command="gparted"/>
    </keybind>
    <keybind key="A-KP_7"><action name="SnapToRegion" region="top-left" /></keybind>
    <keybind key="A-Up"><action name="SnapToRegion" region="top" /></keybind>
    <keybind key="A-KP_9"><action name="SnapToRegion" region="top-right" /></keybind>
    <keybind key="A-Left"><action name="SnapToRegion" region="left" /></keybind>
    <keybind key="A-KP_5"><action name="SnapToRegion" region="center" /></keybind>
    <keybind key="A-Right"><action name="SnapToRegion" region="right" /></keybind>
    <keybind key="A-KP_1"><action name="SnapToRegion" region="bottom-left" /></keybind>
    <keybind key="A-Down"><action name="SnapToRegion" region="bottom" /></keybind>
    <keybind key="A-KP_3"><action name="SnapToRegion" region="bottom-right" /></keybind>
  </keyboard>

  <mouse>
    <default/>
  </mouse>

  <libinput>
    <device>
      <naturalScroll/>
    </device>
  </libinput>

</labwc_config>
